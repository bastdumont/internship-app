<p id="notice"><%= notice %></p>

<h1>Listing Companies</h1>
<div class="new-object">
<button type="button" class="btn btn-default btn-lg">
  <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> <%= link_to 'New Company', new_company_path %>
</button>
</div>
 <div class="filter-reset">
    <button type="button" class="btn btn-default btn-lg">
  <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> <%= link_to('Reset filters', reset_filterrific_url,) %>
</button>
  </div>

<%= form_for_filterrific @filterrific do |f| %>
 <div id="position-filters">
 <div class="filter">
    Search Company Name
    <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
    <%= f.text_field(
      :search_query,
      class: 'filterrific-periodically-observed'
    ) %>
  </div>
 <div class="filter">
   Area of Interest
    <%= f.select(
      :with_area_of_interest,
      @filterrific.select_options[:with_area_of_interest],
      { include_blank: '- All -' }
    ) %>
  </div>
   <div class="filter">
   Status
    <%= f.select(
      :with_status,
      @filterrific.select_options[:with_status],
      { include_blank: '- All -' }
    ) %>
  </div>
  </div>
  <%# add an automated spinner to your form when the list is refreshed %>
  <%= render_filterrific_spinner %>
<% end %>


<%= render(
  partial: 'companies/list',
  locals: { companies: @companies }
) %>




