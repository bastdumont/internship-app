<p id="notice"><%= notice %></p>

<p class="title">
  <strong>Name:</strong>
  <%= @company.name %>
</p>
<table class="table table-striped table-bordered table-hover">
<p>
  <tr><td><strong>Area of interest:</strong></td>
  <td><%= @company.area_of_interest %></td></tr>
</p>



<p>
  <tr><td><strong>Status:</strong></td>
  <td><%= @company.status %></td></tr>
</p>

<p>
  <tr><td><strong>Website:</strong></td>
  <td><%= link_to @company.website, "http://#{@company.website}" %></td></tr>
</p>

<p>
  <tr><td><strong>City:</strong></td>
  <td><%= @company.city %></td></tr>
</p>

<p>
  <tr><td><strong>Notes:</strong></td>
  <td><%= @company.notes %></td></tr>
</p>

<p>
  <tr><td><strong>Adress:</strong></td>
  <td><%= @company.adress %></td></tr>
</p>
</table>
<p>
  <strong>Description:</strong>
  <%= @company.description.html_safe %>
</p>


<br/><br/>
<button type="button" class="btn btn-default btn-lg">
  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> <%= link_to 'Edit', edit_company_path(@company) %> 
</button>

<button type="button" class="btn btn-default btn-lg">
  <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span> <%= link_to 'Back', companies_path %>
</button>