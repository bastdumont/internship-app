<!DOCTYPE html>
<html>
<head>
  <title>InternshipApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header class="navbar navbar-fixed-top navbar-default">
  <div class="container">
    <%= link_to image_tag("logo.png", :alt => "Internship Applicaiton"), {:controller => 'access', :action => 'index'}, id:"logo" %>
     <div class="nav_item">
          <%= link_to "Internships", {:controller => 'positions', :action => 'index'}, class:"btn btn-lg btn-warning" %>
    </div>
     <div class="nav_item">
          <%= link_to "Companies", {:controller => 'companies', :action => 'index'}, class:"btn btn-lg btn-warning" %>
    </div>
     <div class="nav_item">
          <%= link_to "Contacts", {:controller => 'contacts', :action => 'index'}, class:"btn btn-lg btn-warning" %>
    </div>
     <div class="nav_item">
          <%= link_to "Clients", {:controller => 'clients', :action => 'index'}, class:"btn btn-lg btn-warning" %>
    </div>
     <div class="nav_item">
          <%= link_to "Admin", {:controller => 'users', :action => 'index'}, class:"btn btn-lg btn-warning" %>
    </div>
    </div>
</header>
<div class="container">
<%= yield %>
</div>
</body>
</html>
