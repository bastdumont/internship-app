<p id="notice"><%= notice %></p>

<p class="title">
  <strong>Name:</strong>
  <%= @position.name %>
</p>
<table class="table table-striped table-bordered table-hover">
  
<tr><td><strong>Area of interest:</strong></td>
<td><%= @position.area_of_interest %></td></tr>


<tr><td>
  <strong>Link:</strong></td>
  <td><%= link_to @position.link, "http://#{@position.link}" %></td></tr>
</p>

<tr><td>
  <strong>City:</strong></td>
  <td><%= @position.city %></td></tr>
</p>

<tr><td>
  <strong>Company:</strong></td>
  <td><%= link_to(@position.company.name, @position.company) %></td></tr>
</p>

<tr><td>
  <strong>Contact:</strong></td>
  <td><%= link_to(@position.contact.name, @position.contact) %></td></tr>
</p>

<tr><td>
  <strong>Capacity:</strong></td>
  <td><%= @position.capacity %></td></tr>

<tr><td>
  <strong>Allowance:</strong></td>
  <td><%= @position.allowance %></td></tr>

<tr><td>
  <strong>Hiring opportunity:</strong></td>
  <td><%= @position.hiring_opportunity %></td></tr>

<tr><td><strong>Status:</strong></td>
  <td><%= @position.status %></td></tr>

<tr><td><strong>User:</strong></td>
  <td><%= @position.user.name %></td></tr>
</table>
<strong>Description:</strong><br/><br/>
<%= @position.description.html_safe %>
<br/><br/>

<strong>Requirements:</strong><br/><br/>
<%= @position.requirements.html_safe %><br/><br/>


<strong>Remarks:</strong><br/><br/>
<%= @position.remarks.html_safe %>


<br/><br/>
<button type="button" class="btn btn-default btn-lg">
  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> <%= link_to 'Edit Position', edit_position_path(@position) %>
</button>

<button type="button" class="btn btn-default btn-lg">
  <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span> <%= link_to 'Back', positions_path %>
</button>



