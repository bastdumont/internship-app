<p id="notice"><%= notice %></p>

<p class="title">
  <strong>Name:</strong>
  <%= @contact.name %>
</p>
<table class="table table-striped table-bordered table-hover">
<p>
  <tr><td><strong>Company:</strong></td>
  <td><%= @contact.company.name %></td></tr>
</p>

<p>
  <tr><td><strong>Email:</strong></td>
  <td><%= @contact.email %></td></tr>
</p>

<p>
  <tr><td><strong>Phone:</strong></td>
  <td><%= @contact.phone %></td></tr>
</p>

<p>
  <tr><td><strong>Main contact:</strong></td>
  <td><%= @contact.main_contact %></td></tr>
</p>
</table>

<br/><br/>
<button type="button" class="btn btn-default btn-lg">
  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> <%= link_to 'Edit', edit_contact_path(@contact) %>  
</button>

<button type="button" class="btn btn-default btn-lg">
  <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span> <%= link_to 'Back', contacts_path %>
</button>